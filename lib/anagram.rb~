class Anagram
  attr_accessor :words

  def initialize(word)
    @words = word
  end

#	def match(arr)
#		arr.select do |word|
#			word.split('').sort== @word.split('').sort
#		end
#	end

  def match(arr)
    arr.select do |word|
      word.split('').sort == @words.split('').sort
    end
  end
end